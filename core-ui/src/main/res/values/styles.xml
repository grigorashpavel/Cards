<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Widget.Pasha.Button.TextButton" parent="Widget.Material3.Button.TextButton">
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:minHeight">0dip</item>
        <item name="android:minWidth">0dip</item>
        <item name="android:textColor">@color/primary_900</item>
    </style>

    <style name="Widget.Pasha.TextInputLayout.OutlinedBox" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="shapeAppearance">@style/ShapeAppearance.Pasha.SmallComponent</item>
        <item name="android:minHeight">64dip</item>
        <item name="boxBackgroundColor">@color/primary_0</item>
        <item name="boxStrokeColor">@color/pasha_textfields_stroke_color</item>
        <item name="android:textColorHint">@color/primary_500</item>
        <item name="hintTextColor">@color/primary_500</item>
        <item name="endIconTint">@color/primary_500</item>
    </style>

    <style name="Widget.Pasha.Button" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/primary_900</item>
        <item name="android:minHeight">64dip</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/primary_50</item>
        <item name="android:textAppearance">@style/TextAppearance.Pasha.BodyMedium.SemiBold</item>
    </style>

    <style name="Widget.Pasha.Button.OutlinedButton.Icon" parent="Widget.Material3.Button.OutlinedButton.Icon">
        <item name="minHeight">64dip</item>
        <item name="iconSize">50dp</item>
        <item name="iconTint">@color/primary_900</item>
        <item name="android:textColor">@color/primary_900</item>
        <item name="android:minHeight">64dip</item>
        <item name="strokeColor">@color/primary_500</item>
        <item name="android:strokeColor">@color/primary_500</item>
    </style>

    <style name="Widget.Pasha.SearchBar" parent="Widget.Material3.SearchBar">
        <item name="navigationIconTint">@color/primary_500</item>
        <item name="backgroundTint">@color/primary_0</item>
        <item name="android:textAppearance">@style/TextAppearance.Pasha.SearchBar</item>
    </style>
    <style name="TextAppearance.Pasha.SearchBar" parent="TextAppearance.Material3.SearchBar">
        <item name="android:textColorHint">@color/primary_500</item>
    </style>


    <style name="Widget.Pasha.SearchView" parent="Widget.Material3.SearchView">
        <item name="backgroundTint">@color/primary_0</item>
        <item name="android:iconTint">@color/primary_500</item>
        <item name="navigationIconTint">@color/primary_500</item>
        <item name="android:tint">@color/primary_500</item>
        <item name="tint">@color/primary_500</item>
        <item name="android:textAppearance">@style/TextAppearance.Material3.SearchView</item>
    </style>
</resources>