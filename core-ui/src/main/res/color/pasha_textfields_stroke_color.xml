<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Focused -->
    <item android:color="@color/primary_500" android:state_focused="true" />

    <!-- Hovered -->
    <item android:color="@color/primary_300" android:state_hovered="true" />

    <!-- Normal -->
    <item android:color="@color/primary_300" android:state_enabled="true"/>

    <item android:color="@color/primary_0" android:state_enabled="false" />
</selector>