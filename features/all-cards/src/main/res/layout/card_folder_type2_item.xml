<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="80dp"
    android:layout_height="96dp">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/ivFolderImage"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginTop="8dp"
        android:background="@color/primary_200"
        android:scaleType="centerInside"
        android:src="@drawable/ic_empty_resource_image_20"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearance="@style/ShapeAppearance.Pasha.MediumComponent" />

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:gravity="center"
        android:maxLines="1"
        android:text="FolderName"
        android:textAppearance="@style/TextAppearance.Pasha.BodySmall.Regular"
        app:layout_constraintEnd_toEndOf="@id/ivFolderImage"
        app:layout_constraintStart_toStartOf="@id/ivFolderImage"
        app:layout_constraintTop_toBottomOf="@id/ivFolderImage" />


</androidx.constraintlayout.widget.ConstraintLayout>